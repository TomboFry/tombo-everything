<div class="sectioncontainer">
	{{#xif data.url '||' data.title}}
	<div class="row">
		<span class="left">{{data.emoji}}</span>
		<span class="right">
			<strong>
			{{#if data.url}}
				<a href="{{data.url}}" target="_blank" rel="noopener">
					{{#if data.title}}
						{{data.title}}
					{{else}}
						{{data.url}}
					{{/if}}
				</a>
			{{else}}
				{{data.title}}
			{{/if}}
			</strong>
		</span>
	</div>
	{{/xif}}

	{{#xif data.type '==' 'audio'}}
	{{#if data.url}}
	<div class="row">
		<span class="left"></span>
		<div class="right">
			<audio controls>
				<source src="{{data.url}}"/>
				<p>Unfortunately, your browser doesn't support this audio format</p>
			</audio>
		</div>
	</div>
	{{/if}}
	{{/xif}}

	{{#xif data.type '==' 'video'}}
	{{#if data.url}}
	<div class="row">
		<span class="left"></span>
		<div class="right">
			<video controls>
				<source src="{{data.url}}"/>
				<p>Unfortunately, your browser doesn't support this video format</p>
			</video>
		</div>
	</div>
	{{/if}}
	{{/xif}}

	<div class="row">
		<span class="left">
			{{#xif data.url '||' data.title}}{{else}}{{data.emoji}}{{/xif}}
		</span>
		<span class="right">
			{{{data.description}}}
		</span>
	</div>

	<div class="row">
		<span class="left"></span>
		<time
			title="{{data.created_at}}"
			datetime="{{data.created_at}}"
			class="right"
		>
			<small>
			{{#if showlink }}
				<a href="/note/{{data.id}}">{{data.timeago}}</a>
			{{else}}
				{{data.timeago}}
			{{/if}}
			</small>
		</time>
	</div>
</div>
