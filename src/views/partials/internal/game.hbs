<form method="POST" action="/games/{{data.id}}">
	<div class="sectioncontainer">
		{{> internal/id id=data.id type="game" }}

		{{> internal/crudRow emoji="🎮" name="name" value=data.name }}
		{{> internal/crudRowNumber emoji="⌚" name="playtime_mins" value=data.playtime_mins }}
		{{> internal/crudRow emoji="🔗" name="url" value=data.url }}
		{{> internal/crudRow emoji="🕗" name="created_at" value=data.created_at }}

		{{#if data}}
			{{> internal/crudRow emoji="🕙" name="updated_at" value=data.updated_at }}
		{{/if}}

		{{#if data.id}}
		<div class="row">
			<div class="left">🏆</div>
			<div class="right">
				<a href="/games/{{data.id}}/achievements">
					Edit Achievements
				</a>
			</div>
		</div>
		{{/if}}

		{{> internal/crudSubmit }}
	</div>
</form>
