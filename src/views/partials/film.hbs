<div class="sectioncontainer">
	<div class="row">
		<span class="left">ğŸ¥</span>
		<span class="right">
			{{#if data.url}}
			<a href="{{data.url}}" target="_blank" rel="noopener">
				<strong>{{data.title}}</strong>
			</a>
			{{else}}
				<strong>{{data.title}}</strong>
			{{/if}}
			({{data.year}})
		</span>
	</div>
	{{#if data.rating}}
	<div class="row">
		<span class="left">â­</span>
		<span class="right"><strong>{{data.rating}}</strong> <small>/ 10</small></span>
	</div>
	{{/if}}
	<div class="row">
		<span class="left"></span>
		<time
			title="{{data.watched_at}}"
			datetime="{{data.watched_at}}"
			class="right"
		>
			<small>
			{{#if showlink }}
				<a href="/film/{{data.id}}">{{data.timeago}}</a>
			{{else}}
				{{data.timeago}}
			{{/if}}
			</small>
		</time>
	</div>
</div>
