<div class="sectioncontainer">
	<div class="row">
		<span class="left">🎮</span>
		<span class="right"><strong>{{data.name}}</strong></span>
	</div>
	<div class="row">
		<span class="left">⌚</span>
		<span class="right">{{data.duration}}</span>
	</div>
	<div class="row">
		<span class="left"></span>
		<time
			title="{{data.created_at}}"
			datetime="{{data.created_at}}"
			class="right"
		>
			<small>
			{{#if showlink }}
				<a href="/game/{{data.id}}">{{data.timeago}}</a>
			{{else}}
				{{data.timeago}}
			{{/if}}
			</small>
		</time>
	</div>
</div>
