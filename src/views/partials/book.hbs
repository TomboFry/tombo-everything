<div class="sectioncontainer">
	<div class="row">
		<span class="left">📙</span>
		<span class="right">
			{{#if data.url}}
			<a href="{{data.url}}" target="_blank" rel="noopener">
				<strong>{{data.title}}</strong>
			</a>
			{{else}}
				<strong>{{data.title}}</strong>
			{{/if}}
			({{data.year}})
		</span>
	</div>
	<div class="row">
		<span class="left">👤</span>
		<span class="right">{{data.author}}</span>
	</div>

	{{#if data.progress}}
	<div class="row">
		<span class="left">📈</span>
		<span class="right">{{{data.progress}}}</span>
	</div>
	{{/if}}

	{{#if showlink}}
	{{else}}
		<div class="row">
			<span class="left">📅</span>
			<span class="right"><strong>Started:</strong> {{data.started_at}}</span>
		</div>

		{{#if data.completed_at}}
		<div class="row">
			<span class="left">📅</span>
			<span class="right"><strong>Finished:</strong> {{data.completed_at}}</span>
		</div>
		{{/if}}

		{{#if data.pages_total}}
		<div class="row">
			<span class="left">📜</span>
			<span class="right"><strong>Pages:</strong> {{data.pages_total}}</span>
		</div>
		{{/if}}

		{{#if data.rating}}
		<div class="row">
			<span class="left">⭐</span>
			<span class="right"><strong>Rating:</strong> {{data.rating}} / 10</span>
		</div>
		{{/if}}

		{{#if data.genre}}
		<div class="row">
			<span class="left">📦</span>
			<span class="right"><strong>Genre:</strong> {{data.genre}}</span>
		</div>
		{{/if}}
	{{/if}}

	<div class="row">
		<span class="left"></span>
		<time
			title="{{data.updated_at}}"
			datetime="{{data.updated_at}}"
			class="right"
		>
			<small>
			{{#if showlink }}
				<a href="/book/{{data.id}}">{{data.timeago}}</a>
			{{else}}
				{{data.timeago}}
			{{/if}}
			</small>
		</time>
	</div>
</div>
